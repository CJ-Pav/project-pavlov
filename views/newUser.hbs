{{> header}}

<main role="main">
    <div class="greeter">
        Please sign in to your account. Already have an account? Log in  
        <a aria-label="log-in" href="./logIn">here</a>.
    </div>
    <div class="home-container container">
        <div class="row">
            <div class="col-sm-3"></div>
            <div class="basic-box opt-container col-sm-6">
                <section class="dialog opt-box">
                    <p class="dialog-item">
                        <input placeholder="First Name" type="text" required>
                        <input placeholder="Last Name" type="text" required>
                    </p>
                    <p class="dialog-item">
                        <input placeholder="Email" type="email" required>
                        <input placeholder="Phone (suggested)" type="tel">
                    </p>
                    {{!-- <input placeholder="Address (optional)" type="text"> --}}
                    <p class="dialog-item">
                        <input placeholder="Password" type="password" required>
                        <input placeholder="Confirm" type="password" required>
                    </p>
                    <p class="dialog-buttons">
                        <button id="butLogInConfirm" class="button">LogIn</button>
                        <button id="butLogInCancel" class="button">Cancel</button>
                    </p>
                </section>
            </div>
            <div class="col-sm-3"></div>
        </div>
    </div>

    {{!-- Info Banner --}}
    {{> infoBanner}}

